<tr>
  <td>
    <%= sale.name %>
  </td>
  <td>
    <%= sale.starts_on %>
  </td>
  <td>
    <%= sale.ends_on %>
  </td>
  <td>
    <% if sale.finished? %>
      <span class="label label-danger">Finished</span>
    <% elsif sale.upcoming? %>
      <span class="label label-warning">Coming</span>
    <% else %>
      <span class="label label-info">Active</span>
    <% end %>
    <%#= sale. %>
  </td>
  <td>
    <%= sale.percent_off %>%
  </td>
</tr>